<div class= "container">
  <div class= "row py-4">
    <div class= "offset-1"></div>
      <h4 class= "bg-light">新規会員登録</h4>
    </div>
  </div>
</div>



<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class= "container">
    <div class= "form-group row">
      <div class= "col-md-2 mt-2">名前</div>

      <%= f.label :last_name, "(姓)", :class => "col-md-1 col-form-label"%>
      <%= f.text_field :last_name, :class => "form-control col-md-2", placeholder: "令和"%>

      <%= f.label :first_name, "(名)", :class => "col-md-1 col-form-label"%>
      <%= f.text_field :first_name, :class => "form-control col-md-2", placeholder: "道子"%>
    </div>

    <div class= "form-group row">
      <div class= "col-md-2 mt-2">フリガナ</div>
      <%= f.label :last_name_kana, "(セイ)", :class => "col-md-1 col-form-label"%>
      <%= f.text_field :last_name_kana, :class => "form-control col-md-2", placeholder: "レイワ"%>

      <%= f.label :first_name_kana, "(メイ)", :class => "col-md-1 col-form-label"%>
      <%= f.text_field :first_name_kana, :class => "form-control col-md-2", placeholder: "ミチコ"%>
    </div>

    <div class= "form-group row">
      <%= f.label :email, "メールアドレス", :class => "col-md-3 col-form-label"%>
      <%= f.email_field :email, :class => "form-control col-md-5", placeholder: "sample@example.com"%>
    </div>

    <div class= "form-group row">
      <%= f.label :postal_code, "郵便番号(ハイフンなし)", :class => "col-md-3 col-form-label"%>
      <%= f.text_field :postal_code, :class => "form-control col-md-2", placeholder: "0000000"%>
    </div>

    <div class= "form-group row">
      <%= f.label :address, "住所", :class => "col-md-3 col-form-label"%>
      <%= f.text_field :address, :class => "form-control col-md-5", placeholder: "東京都渋谷区代々木神園町0-0"%>
    </div>

    <div class= "form-group row">
      <%= f.label :telephone_number, "電話番号(ハイフンなし)", :class => "col-md-3 col-form-label"%>
      <%= f.text_field :telephone_number, :class => "form-control col-md-2", placeholder: "0000000000"%>
    </div>

    <div class= "form-group row">
      <label for= "password" class= "col-md-3 col-form-label">
        パスワード
        <% if @minimum_password_length %>
          (<%= @minimum_password_length %> 文字以上)
        <% end %>
      </label>
      <%= f.password_field :password, :class => "form-control col-md-2"%>
    </div>

    <div class= "form-group row">
      <%= f.label :password_confirmation, "パスワード(確認用)", :class => "col-md-3 col-form-label"%>
      <%= f.password_field :password_confirmation, :class => "form-control col-md-2"%>
    </div>


    <div class= "actions d-grid col-md-4 mx-auto">
      <%= f.submit "新規登録", :class => "btn btn-success btn-lg btn-block" %>
    </div>
  </div>
<% end %>

<div class= "container">
  <div class= "row py-4">
    <div class= "offset-1">
      <h4 class= "bg-Light">既に登録済みの方</h4>
    </div>
  </div>
  <div class= "row">
    <div class= "offset-1 col-md-1">
      <%= link_to new_customer_session_path do %>
      こちら
      <% end %>
    </div>
    <div>
      からログインしてください。
    </div>
  </div>
</div>
