<div class= "container">
  <div class= "row m-5">
    <div class= "col-3">
        ジャンル検索
    </div>

    <div class= "col-3">
      <h3>商品一覧(全
        <%= @items.count %>
        件)
      </h3>
    </div>

    <% @items.each do |item| %>
      <div class= "offset-3 col-4">
        <%= item.image %>
        <%= item.name %>
        ¥<%= item.add_tax_price.to_s(:delimited)%>
      </div>
    <% end %>
    <%= paginate @items %>
  </div>
</div>