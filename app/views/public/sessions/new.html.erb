<div class= "container">
  <div class= "row py-4">
    <div class= "offset-1"></div>
      <h4 class= "bg-light">ログイン</h4>
    </div>
  </div>
</div>

<%= form_with model: @customer, url: customer_session_path do |f| %>
  <div class= "container">
    <div class= "row py-3 pl-3">
      <div class= "offset-1">
        <h6 class= "bg-Light">会員の方はこちらからログイン</h6>
      </div>
    </div>

    <div class= "form-group row">
      <%= f.label :email, "メールアドレス", :class => "offset-1 col-md-3 col-form-label"%>
      <%= f.email_field :email, :class => "form-control col-md-5", autofocus: "true", autocomplete: "email", placeholder: "sample@example.com"%>
    </div>

    <div class= "form-group row">
      <%= f.label :password, "パスワード", :class => "offset-1 col-md-3 col-form-label"%>
      <%= f.password_field :password, :class => "form-control col-md-5"%>
    </div>

    <div class= "actions d-grid col-md-3 mx-auto">
      <%= f.submit "ログイン", :class => "btn btn-primary btn-lg btn-block" %>
    </div>

    <div class= "row py-3 pt-2">
      <div class= "offset-1 pl-3">
        <h6 class= "bg-Light">会員登録がお済みでない方</h6>
      </div>
    </div>
    <div class= "row">
      <div class= "offset-2 col-md-1">
        <%= link_to new_customer_registration_path do %>
        こちら
        <% end %>
      </div>
      <div>
        から新規登録を行ってください。
      </div>
    </div>
  </div>
<% end %>