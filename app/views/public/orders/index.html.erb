<div class= "container">
  <div class= "row py-4">
    <div class= "offset-1"></div>
      <h4 class= "bg-light">注文履歴一覧</h4>
    </div>
  </div>
</div>

<div class= "container">
　<div class="row">
    <div class="col-12">
      <table border="1">
        <tr height="50">
          <th bgcolor="whitesmoke" width="150">注文日</th>
          <th bgcolor="whitesmoke" width="400">配送先</th>
          <th bgcolor="whitesmoke" width="150">注文商品</th>
          <th bgcolor="whitesmoke" width="100">支払金額</th>
          <th bgcolor="whitesmoke" width="150">ステータス</th>
          <th bgcolor="whitesmoke" width="150">注文詳細</th>
        </tr>
        <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td>
            〒<%= order.postal_code %><br>
            <%= order.address %><br>
            <%= order.name %>
          </td>
          <td>
            <% order.order_details.each do |order_detail| %>
            <%= order_detail.item.name %><br>
            <% end %>
          </td>
          <td><%= order.total_payment %>円</td>
          <td><%= order.status_i18n %></td>
          <td class="text-center"><%= link_to "表示する", order_path(order), class: "btn btn-primary" %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>