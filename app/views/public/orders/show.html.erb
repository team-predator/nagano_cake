<div class="container my-5">

  <div class="row no-gutters ml-5">
    <h5 class="mt-3 bg-light">注文履歴一覧</h5>
  </div>
　<div class="row">
    <div class="col-7">
      <p><strong>注文情報</strong></p>
      <table border="1">
        <tr><th bgcolor="whitesmoke" width="150" height="50">注文日</th><td><%= @order.created_at.strftime('%Y/%m/%d') %></td></tr>
        <tr>
          <th bgcolor="whitesmoke" width="150" height="75">配送先</th>
          <td>
            〒<%= @order.postal_code %><br>
            <%= @order.address %><br>
            <%= @order.name %>
          </td>
          </tr>
        <tr><th bgcolor="whitesmoke" width="150" height="50">支払方法</th><td></td></tr>
        <tr><th bgcolor="whitesmoke" width="150" height="50">ステータス</th><td></td></tr>
      </table>
    </div>
    <div class="col-4">
      <p><strong>請求金額</strong></p>
      <table border="1">
        <tr><th bgcolor="whitesmoke" width="200" height="50">商品合計</th><td></td></tr>
        <tr><th bgcolor="whitesmoke" width="200" height="50">配送料</th><td></td></tr>
        <tr><th bgcolor="whitesmoke" width="200" height="50">ご請求額</th><td></td></tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-9">
      <p><strong>注文内容</strong></p>
      <table border="1">
        <tr>
          <th bgcolor="whitesmoke" width="700" height="50">商品</th>
        　<th bgcolor="whitesmoke" width="150" height="50">単価(税込)</th>
          <th bgcolor="whitesmoke" width="100" height="50">個数</th>
          <th bgcolor="whitesmoke" width="100" height="50">小計</th>
        </tr>
        <tr>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      </table>
    </div>
  </div>
</div>