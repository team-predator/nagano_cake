<div class="container my-5">

  <div class="row no-gutters m-5">
    <h5 class="mt-3 bg-light">配送先登録/一覧</h5>
  </div>
  <%= form_with model: @address, url: addresses_path, method: :post, local: true do |f| %>
  <div class="form-group row">
    <%= f.label :"郵便番号(ハイフンなし)", class: "col-md-3" %>
    <%= f.text_field :postal_code, class:"col-md-3 form-control", placeholder: "0000000" %>
  </div>
    <div class="form-group row">
    <%= f.label :"住所", class: "col-md-3" %>
    <%= f.text_field :address, class:"col-md-5 form-control", placeholder: "東京都渋谷区代々木神園町0-0" %>
  </div>
    <div class="form-group row">
    <%= f.label :"宛名", class: "col-md-3" %>
    <%= f.text_field :name, class:"col-md-3 form-control", placeholder: "令和道子" %>
    <%= f.submit "新規登録", class:"btn btn-success disabled col-bd-2 offset-3" %>
  </div>
  <% end %>
  <div class="row my-5">
    <div class="col-10">
      <table border="1" height="50">
        <tr>
          <th bgcolor="whitesmoke" width="100">郵便番号</th>
          <th bgcolor="whitesmoke" width="400">住所</th>
          <th bgcolor="whitesmoke" width="100">宛名</th>
          <th bgcolor="whitesmoke" width="300"></th>
        </tr>
        <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success col-5" %>
            <%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btn-danger col-5" %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>