<div class="container my-5">

  <div class="row no-gutters m-5">
    <h5 class="mt-3 bg-light">配送先編集</h5>
  </div>
  <%= form_with model: @address, local: true do |f| %>
  <div class="form-group row">
    <%= f.label :"郵便番号(ハイフンなし)", class:"col-md-3" %>
    <%= f.text_field :postal_code, class:"col-md-2 form-control" %>
  </div>
  <div class="form-group row">
    <%= f.label :"住所", class:"col-md-3" %>
    <%= f.text_field :address, class:"col-md-5 form-control" %>
  </div>
  <div class="form-group row">
    <%= f.label :"宛名", class:"col-md-3" %>
    <%= f.text_field :name, class:"col-md-2 form-control" %>
    <%= f.submit "変更内容を保存", class:"btn btn-success col-bd-2 offset-3" %>
  </div>
  <% end %>
</div>