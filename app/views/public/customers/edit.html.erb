<div class="container my-5">

  <div class="row no-gutters m-5">
    <h5 class="mt-3 bg-light">会員情報編集</h5>
  </div>
  <%= form_with model: @customer, url: customers_information_path, method: :patch, local: true do |f| %>
  <div class="form-group row">
    <%= f.label :"氏名", class:"col-md-3" %>
    <%= f.text_field :last_name, class:"col-md-2 form-control" %>
    <%= f.text_field :first_name, class:"col-md-2 form-control ml-3" %>
  </div>
  <div class="form-group row">
    <%= f.label :"フリガナ", class:"col-md-3" %>
    <%= f.text_field :last_name_kana, class:"col-md-2 form-control" %>
    <%= f.text_field :first_name_kana, class:"col-md-2 form-control ml-3" %>
  </div>
  <div class="form-group row">
    <%= f.label :"郵便番号", class:"col-md-3" %>
    <%= f.text_field :postal_code, class:"col-md-2 form-control" %>
  </div>
  <div class="form-group row">
    <%= f.label :"住所", class:"col-md-3" %>
    <%= f.text_field :address, class:"col-md-5 form-control" %>
  </div>
  <div class="form-group row">
    <%= f.label :"電話番号", class:"col-md-3" %>
    <%= f.text_field :telephone_number, class:"col-md-2 form-control" %>
  </div>
  <div class="form-group row">
    <%= f.label :"メールアドレス", class:"col-md-3" %>
    <%= f.text_field :email, class:"col-md-2 form-control" %>
  </div>
  <div class="form-group row d-flex">
    <%= f.submit "編集内容を保存", class:"btn btn-success col-md-2 offset-3" %>
    <%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger col-md-2 offset-1" %>
  </div>
  <% end %>
</div>