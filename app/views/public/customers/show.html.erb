<div class="container my-5">

  <div class="row no-gutters m-5">
    <h5 class="mt-3 bg-light">マイページ</h5>
  </div>

  <div class="row">
	<div class="mt-1 col-md-8 mx-auto">
	  <table>
	    <tr><th width="100">登録情報</th><td><%= link_to "編集する", customers_information_edit_path, class: "btn btn-success w-20" %></td></tr>
	  </table>
	    <table border="1" height="300">
	    	<tr><th bgcolor="whitesmoke" width="200">氏名</th>
	    	<td width="500"><%= @customer.last_name %><%= @customer.first_name %></td></tr>
