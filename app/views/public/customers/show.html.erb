	      <tr><th bgcolor="whitesmoke" width="200">電話番号</th><td width="500"><%= @customer.telephone_number %></td></tr>
	      <tr><th bgcolor="whitesmoke" width="200">メールアドレス</th><td width="500"><%= @customer.email %></td></tr>
	    </table>
	    <table>
	    	<tr><th width="100">配送先</th><td><%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %></td></tr>
