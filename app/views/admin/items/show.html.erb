<h4>商品詳細</h4>

<p id="notice"></p>
 <div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

    </div>
    <div class="col-md-8 offset-md-1">
      <%= @item.each do |item| %>
      <thead>
        <tr>
          <td>商品名</td>
          <td><%= item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= item.genre %></td>
        </tr>
        <td>税込価格<br />(税抜価格)</td>
        <td><%= item.price %></td>
      </thead>
      <% end %>
    </div>
  </div>
 </div>
