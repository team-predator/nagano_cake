<div class="row no-gutters">
<p class="mt-2 offset-3 bg-light">商品詳細</p>
</div>

<p id="notice"></p>
 <div class="container px-5 px-sm-0">
  <div class="row">
    
    <div class="col-md-3">
    <%= image_tag @item.image, size: "200x200" %>
    </div>
    <div class="col-md-8 offset-md-1">
      <table class="table table-striped">
      <tbody>
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格<br />(税抜価格)</td>
          <td><%= @item.add_tax_price.to_s(:dalimited) %><br />(<%= @item.price %>)</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td><% if @item.is_active == true %>販売中 
      　     <% else @item.is_active == false %>販売停止中
      　     <% end %></td>
        </tr>
      </tbody>
      
      </table>
      <%= link_to '編集する', edit_admin_item_path, class: 'btn btn-success' %>
    </div>
  </div>
 </div>
