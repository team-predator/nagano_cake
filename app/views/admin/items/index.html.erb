<h2>商品一覧</h2>

<%= link_to new_admin_item_path do %>
<i class="fa-thin fa-circle-plus"></i>
<% end %>


<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-md-10">
      <table class="table table-hover table-inveres">
      <thead>
        <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <%= @items.each do |item| %>
      　<tr>
      　<td></td>
      　<td><%= item.name %></td>
      　<td><%= item.price %></td>
      　<td><%= item.genre %></td>
      　<td><%= item.is_active %></td>
      　</tr>
      　<% end %>
      　<%= paginate @items %>

      </tbody>
      </table>
    　</div>
    </div>
  </div>
</div>
