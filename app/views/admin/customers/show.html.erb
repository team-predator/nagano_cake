<div class="row no-gutters">
<h4 class="mt-2 offset-3 bg-light"><strong><%= @customer.full_name %></strong>さんの<strong>会員詳細</strong></h4>
</div>

<p id="notice"></p>
 <div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <table class="table table-striped">
      <tbody>
        <tr>
          <td>会員ID</td>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= @customer.last_name %><%= @customer.first_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td><% if @customer.is_deleted == true %>退会
      　     <% else @customer.is_deleted == false %>有効
      　     <% end %></td>
        </tr>
      </tbody>
      </table>
      <td>
        <%= link_to '編集する', edit_admin_customer_path, class: 'btn btn-success' %>
      </td>
      <td>
        <%= link_to '注文履歴一覧を見る', admin_path, class: 'btn btn-primary' %>
      </td>
    </div>
  </div>
 </div>
