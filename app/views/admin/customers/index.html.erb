<div class="row no-gutters">
<h4 class="mt-2 offset-3 bg-light">会員一覧</h4>
</div>

<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-md-10">
      <table class="table table-hover table-inveres">
      <thead>
        <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
      　<tr>
      　<td><%= customer.id %></td>
      　<td><%= link_to customer.full_name, admin_customer_path(customer) %></td>
      　<td><%= customer.email %></td>
      　<td><% if customer.is_deleted == true %>退会
      　     <% else customer.is_deleted == false %>有効
      　     <% end %>
      　</td>
      　</tr>
      　<% end %>
      </tbody>
      </table>
      <div class="row justify-content-center">
       <div><%= paginate @customers %></div>
    　</div>
    </div>
  </div>
</div>
