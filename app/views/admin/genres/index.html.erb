<h4>ジャンル一覧･追加</h4>

<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-md-10">
      <%= form_with model: Genre.new do |f| %>
      <%= f.label :name, "ジャンル名", :class => "col-md-3 col-form-label" %>
      <%= f.text_field :name, :class => "form-control col-md-3" %>
      <%= f.submit '新規登録' %>
      <% end %>
    </div>
  </div>
</div>  