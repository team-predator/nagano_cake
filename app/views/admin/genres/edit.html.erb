<div class="row no-gutters">
<p class="mt-2 offset-3 bg-light">ジャンル編集</p>
</div>

<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-md-10">
     <%= form_with model: @genre,url: admin_genre_path(@genre.id),method: :patch do |f| %>
      <tr>
      <td>ジャンル名</td>
      <%= f.text_field :name %>
      <%= f.submit '変更を保存', class: 'btn btn-success' %>
      </tr>
      <% end %>
    </div>
  </div>
</div>
