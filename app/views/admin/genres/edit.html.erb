<div class= "container">
  <div class= "row py-4">
    <div class= " offset-1">
      <h4 class= "bg-light">ジャンル編集</h4>
    </div>
  </div>
</div>

<p id="notice"></p>
<div class="container">
    <%= form_with model: @genre,url: admin_genre_path(@genre.id),method: :patch do |f| %>
      <div class="form-group row">
        <%= f.label :name, "ジャンル名", :class => "col-md-2 col-form-label" %>
        <%= f.text_field :name, :class => "form-control col-md-3" %>
        <%= f.submit '変更を保存', class: 'btn btn-success ml-5' %>
      </div>
    <% end %>
</div>
